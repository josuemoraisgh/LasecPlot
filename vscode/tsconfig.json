{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "sourceMap": true,
    "types": ["node", "vscode"],
    "skipLibCheck": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", ".vscode-test"]
  
}
