{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (workspace)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "pre_launch"
    },
    {
      "name": "Run Extension (from current file folder)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${fileDirname}"],
      "outFiles": ["${fileDirname}/out/**/*.js"],
      "preLaunchTask": "pre_launch"
    }
  ]
}
