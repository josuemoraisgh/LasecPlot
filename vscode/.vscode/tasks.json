// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm_watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "cp_media",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "rm -rf ./media/; mkdir media; cp -r ../server/www/* ./media/",
			"presentation": {
				"reveal": "always"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "pre_launch",
			"dependsOn": [
				"cp_media",
				"npm_watch"
			]
		}
	]
}
